<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora Básica"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textShadowColor="@android:color/black"
        android:textShadowDx="2"
        android:textShadowDy="2"
        android:textShadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|end"
        android:padding="20dp"
        android:background="@drawable/display_background"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Clear (esquina izquierda) -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Clear"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_clear"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnClearAll"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Clear All (esquina derecha) -->
    <Button
        android:id="@+id/btnClearAll"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Clear All"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_clear_all"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fila 1: 7, 8, 9, ÷ -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btnDivide"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="÷"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_operator"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnClearAll"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fila 2: 4, 5, 6, × -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btnMultiply"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="×"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_operator"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnDivide"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fila 3: 1, 2, 3, - -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintEnd_toStartOf="@id/btnSubtract"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_operator"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnMultiply"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fila 4: 0, ., + -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDot"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_number"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintEnd_toStartOf="@id/btnAdd"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_operator"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSubtract"
        app:layout_constraintStart_toEndOf="@id/btnDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Botón Igual -->
    <Button
        android:id="@+id/btnEquals"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="="
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_equals"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>